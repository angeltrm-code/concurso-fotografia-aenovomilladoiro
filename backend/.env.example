# Configuración del servidor
PORT=8080
NODE_ENV=development

# Configuración de email (SMTP)
EMAIL_HOST=aenovomilladoiro-com.correoseguro.dinaserver.com
EMAIL_PORT=465
EMAIL_SECURE=true
EMAIL_USER=foto@aenovomilladoiro.com
EMAIL_PASS=tu_contraseña
EMAIL_FROM=foto@aenovomilladoiro.com
EMAIL_TO=organizacion@aenovomilladoiro.com

# Email de prueba para los scripts
TEST_EMAIL=test@example.com

# Configuración de seguridad
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000  # 15 minutos
RATE_LIMIT_MAX_REQUESTS=5

# Configuración de archivos
MAX_FILE_SIZE=5242880  # 5MB en bytes
UPLOAD_DIR=uploads
CARRUSEL_DIR=uploads/carrusel

# Configuración de backup
BACKUP_INTERVAL=86400000  # 24 horas en milisegundos
BACKUP_RETENTION_DAYS=7
